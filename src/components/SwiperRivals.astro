---
import Card from "./Card.astro";

const rivals = [
  {
    descripcion: "division 10 a 9",
    precio: "15,00",
  },
  {
    descripcion: "division 9 a 8",
    precio: "15,00",
  },
  {
    descripcion: "division 8 a 7",
    precio: "15,00",
  },
  {
    descripcion: "division 7 a 6",
    precio: "15,00",
  },
  {
    descripcion: "division 6 a 5",
    precio: "20,00",
  },
  {
    descripcion: "division 5 a 4",
    precio: "25,00",
  },
  {
    descripcion: "division 4 a 3",
    precio: "30,00",
  },
  {
    descripcion: "division 3 a 2",
    precio: "35,00",
  },
  {
    descripcion: "division 2 a 1",
    precio: "40,00",
  },
  {
    descripcion: "division 1 a elite",
    precio: "50,00",
  },
];
---

<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    {
      rivals?.map((e) => (
        <div class="swiper-slide">
          <Card
            precio={e.precio}
            rango={"./assets/divison.png"}
            descripcion={e.descripcion}
            color="blue"
          />
        </div>
      ))
    }
  </div>
  <div class="swiper-pagination"></div>
</div>;
