---
import Card from "./Card.astro";
import i18next, { t } from "i18next";

const rivals = [
  {
    descripcion: `division 10 ${t("home.to")} 9`,
    precio: "15,00",
  },
  {
    descripcion: `division 9 ${t("home.to")} 8`,
    precio: "15,00",
  },
  {
    descripcion: `division 8 ${t("home.to")} 7`,
    precio: "15,00",
  },
  {
    descripcion: `division 7 ${t("home.to")} 6`,
    precio: "15,00",
  },
  {
    descripcion: `division 6 ${t("home.to")} 5`,
    precio: "20,00",
  },
  {
    descripcion: `division 5 ${t("home.to")} 4`,
    precio: "25,00",
  },
  {
    descripcion: `division 4 ${t("home.to")} 3`,
    precio: "30,00",
  },
  {
    descripcion: `division 3 ${t("home.to")} 2`,
    precio: "35,00",
  },
  {
    descripcion: `division 2 ${t("home.to")} 1`,
    precio: "40,00",
  },
  {
    descripcion: `division 1 ${t("home.to")} elite`,
    precio: "50,00",
  },
];
---

<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    {
      rivals?.map((e) => (
        <div class="swiper-slide">
          <Card
            precio={e.precio}
            rango={"./assets/divison.png"}
            descripcion={e.descripcion}
            color="blue"
          />
        </div>
      ))
    }
  </div>
  <div class="swiper-pagination"></div>
</div>;

<style is:inline>
  .swiper-wrapper {
    padding: 30px 0;
  }
</style>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<!-- Initialize Swiper -->
<script is:inline>
  var swiper = new Swiper(".mySwiper", {
    breakpoints: {
      320: {
        slidesPerView: 1,
      },
      680: {
        slidesPerView: 3,
      },
      970: {
        slidesPerView: 4,
      },
      1374: {
        slidesPerView: 5,
      },
    },
    spaceBetween: 30,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>
