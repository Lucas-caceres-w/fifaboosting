---
import i18next, { t } from "i18next";
---

<header
  style="background-position-x: 50%;"
  class="w-full h-[400px] md:h-[60vw] lg:h-[45vw] bg-no-repeat bg-[url('/assets/portada.jpg')] relative grid place-items-center"
>
  <div class="bg-black/40 absolute top-0 w-full h-full"></div>
  <section
    class="z-10 mt-0 lg:mt-12 xl:mt-24 flex flex-col items-center w-full sm:w-10/12 md:w-9/12 lg:w-7/12 gap-3 2xl:gap-6"
  >
    <h1
      data-aos="fade-up"
      data-aos-delay="50"
      data-aos-duration="1000"
      class="text-white font-extrabold text-center text-2xl xl:text-4xl 2xl:text-6xl"
    >
      {t("home.title-port")}
    </h1>
    <span
      data-aos="fade-up"
      data-aos-delay="100"
      data-aos-duration="1000"
      class="w-10/12 bg-white h-1 rounded-sm"></span>
    <p
      data-aos="fade-up"
      data-aos-delay="150"
      data-aos-duration="1000"
      class="text-white text-center text-2xl xl:text-3xl 2xl:text-5xl"
    >
      {t("home.price")}
    </p>
    <div
      data-aos="fade-up"
      data-aos-delay="200"
      data-aos-duration="1000"
      class="flex flex-row gap-6 xl:gap-12 items-center"
    >
      <button
        class="bg-[#60D669] rounded-md text-white text-base sm:text-lg lg:text-2xl xl:text-3xl p-2 sm:p-3 flex flex-row items-center gap-2 w-full"
        >{t("home.contact")}
        <img class="w-8 sm:w-10" src="./assets/wsp.png" alt="" /></button
      >
      <img class="w-12 sm:w-16" src="./assets/insta.png" />
    </div>
    <img
      data-aos="fade-up"
      data-aos-delay="300"
      data-aos-duration="1000"
      class="w-9/12 2xl:w-10/12"
      src="./assets/logos-portf.png"
      alt=""
    />
  </section>
</header>
