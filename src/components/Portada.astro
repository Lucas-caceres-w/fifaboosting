---
import i18next, { t } from "i18next";
---

<header
  style="background-position-x: 50%;"
  class="w-full h-[400px] md:h-[60vw] lg:h-[45vw] bg-no-repeat bg-[url('/assets/portada.jpg')] relative grid place-items-center"
>
  <div class="bg-black/40 absolute top-0 w-full h-full"></div>
  <section
    class="z-10 mt-0 lg:mt-12 xl:mt-24 flex flex-col items-center w-full sm:w-10/12 md:w-9/12 lg:w-7/12 gap-3 2xl:gap-6"
  >
    <h1
      class="text-white font-extrabold text-center text-2xl xl:text-4xl 2xl:text-6xl"
    >
      {t("home.title-port")}
    </h1>
    <span class="w-10/12 bg-white h-1 rounded-sm"></span>
    <p class="text-white text-center text-2xl xl:text-3xl 2xl:text-5xl">
      {t("home.price")}
    </p>
    <div class="flex flex-row gap-6 xl:gap-12 items-center">
      <button
        class="bg-[#60D669] rounded-md text-white text-lg lg:text-2xl xl:text-3xl p-3 flex flex-row items-center gap-2 w-full"
        >{t("home.contact")} <img class="w-10" src="./assets/wsp.png" alt="" /></button
      >
      <img class="w-16" src="./assets/insta.png" />
    </div>
    <img class="w-9/12 2xl:w-10/12" src="./assets/logos-portf.png" alt="" />
  </section>
</header>
